<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            style="@style/Primer.Button.Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Primary.Button.Text" />

        <Button
            style="@style/Primer.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Primary.Button.Text" />

        <Button
            android:enabled="false"
            style="@style/Primer.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Primary.Button.Text" />

        <Button
            style="@style/Primer.NewButton.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NewButton.Primary" />

        <Button
            android:enabled="false"
            style="@style/Primer.NewButton.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NewButton.Primary disabled" />

        <io.primer.android.ui.components.PayButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
