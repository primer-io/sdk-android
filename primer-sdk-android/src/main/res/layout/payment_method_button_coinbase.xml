<?xml version="1.0" encoding="utf-8"?>
<io.primer.android.ui.components.ButtonDefaultLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_preview_button"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/primer_payment_method_preview_button_height"
    android:background="@drawable/button_light"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingTop="2sp">

    <TextView
        android:id="@+id/card_preview_button_text"
        style="@style/Primer.Text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/primer_payment_method_preview_button_height"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:text="@string/pay_with_crypto"
        app:drawableStartCompat="@drawable/ic_coinbase_wallet"
        tools:drawableStart="@drawable/ic_coinbase_wallet" />

</io.primer.android.ui.components.ButtonDefaultLayout>
