<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/form_back_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_go_back"
        app:layout_constraintBottom_toBottomOf="@id/form_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/form_icon" />

    <ImageView
        android:id="@+id/form_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <io.primer.android.ui.components.PrimerTextViewWidget
        android:id="@+id/form_amount"
        style="@style/Primer.Text.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/xxl_vertical_margin"
        app:layout_constraintTop_toBottomOf="@id/form_icon" />

    <io.primer.android.ui.components.PrimerTextViewWidget
        android:id="@+id/form_title"
        style="@style/Primer.Text.Title.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_vertical_margin"
        app:layout_constraintTop_toBottomOf="@id/form_amount" />

    <io.primer.android.ui.components.PrimerTextViewWidget
        android:id="@+id/form_description"
        style="@style/Primer.Text.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_large_padding"
        app:layout_constraintBottom_toTopOf="@id/form_image"
        app:layout_constraintTop_toBottomOf="@id/form_title" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/form_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/xl_vertical_margin"
        android:layout_marginVertical="@dimen/large_vertical_margin"
        app:layout_constraintDimensionRatio="W,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/form_description"
        app:strokeColor="@color/primer_payment_method_button_border"
        app:strokeWidth="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>