<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Primer.FormInput.Layout"
        android:hint="@string/card_holder_name"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:theme="@style/Primer.FormInput.Input"
            android:id="@+id/card_form_cardholder_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:inputType="textPersonName"
            android:imeOptions="actionNext"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/primer_input_spacing_vert"
        />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Primer.FormInput.Layout"
        android:hint="@string/card_number"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:theme="@style/Primer.FormInput.Input"
            android:id="@+id/card_form_card_number_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:digits="0123456789 "
            android:imeOptions="actionNext"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/primer_input_spacing_vert"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false"
        >
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Primer.FormInput.Layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:hint="@string/card_expiry"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:theme="@style/Primer.FormInput.Input"
                android:id="@+id/card_form_card_expiry_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:inputType="date"
                android:digits="0123456789/ "
                />
        </com.google.android.material.textfield.TextInputLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minHeight="@dimen/primer_input_spacing_horiz"
            />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Primer.FormInput.Layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:hint="@string/card_cvv"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:theme="@style/Primer.FormInput.Input"
                android:id="@+id/card_form_card_cvv_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:imeOptions="actionDone"
                android:maxLength="4"
                />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/primer_input_spacing_vert" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <Button
            android:id="@+id/card_form_submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primer_button_primary_fg"
            android:background="@drawable/button_primary_bg"
            android:elevation="@dimen/primer_button_elevation"
            android:paddingEnd="@dimen/primer_button_padding_horiz"
            android:paddingStart="@dimen/primer_button_padding_horiz" />
    </LinearLayout>

</LinearLayout>