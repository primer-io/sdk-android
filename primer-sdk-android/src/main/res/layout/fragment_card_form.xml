<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/primer_form_title_margin"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/card_form_title"
                style="@style/Primer.Text.Title.Small"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/enter_card_details" />

            <TextView
                android:id="@+id/nav_cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center_vertical|end"
                android:text="@string/cancel"
                android:textAllCaps="true" />
        </LinearLayout>

        <io.primer.android.ui.components.TextInputWidget
            android:id="@+id/card_form_card_number"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/card_number"
            app:errorEnabled="true"
            app:errorIconDrawable="@null"
            app:suffixTextColor="@android:color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/card_form_card_number_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="0123456789 "
                android:drawablePadding="10dp"
                android:imeOptions="actionNext"
                android:inputType="number" />
        </io.primer.android.ui.components.TextInputWidget>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/primer_input_spacing_vert" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <io.primer.android.ui.components.TextInputWidget
                android:id="@+id/card_form_card_expiry"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:hint="@string/card_expiry"
                app:errorEnabled="true"
                app:errorIconDrawable="@null">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/card_form_card_expiry_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="0123456789/ "
                    android:imeOptions="actionNext"
                    android:inputType="date" />
            </io.primer.android.ui.components.TextInputWidget>

            <io.primer.android.ui.components.TextInputWidget
                android:id="@+id/card_form_card_cvv"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:hint="@string/card_cvv"
                app:errorEnabled="true"
                app:errorIconDrawable="@null">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/card_form_card_cvv_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="4" />
            </io.primer.android.ui.components.TextInputWidget>

        </LinearLayout>

        <io.primer.android.ui.components.TextInputWidget
            android:id="@+id/card_form_cardholder_name"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/primer_input_spacing_vert"
            android:hint="@string/card_holder_name"
            app:errorEnabled="true"
            app:errorIconDrawable="@null">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/card_form_cardholder_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:maxLines="1" />
        </io.primer.android.ui.components.TextInputWidget>

        <TextView
            android:id="@+id/tvTitleBillingAddress"
            style="@style/Primer.Text.SubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_card_form_billing_address" />

        <io.primer.android.ui.components.TextInputWidget
            android:id="@+id/card_form_country_code"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/primer_input_spacing_vert"
            android:layout_weight="1"
            android:hint="@string/select_country"
            app:errorEnabled="true"
            app:errorIconDrawable="@null">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/card_form_country_code_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:maxLines="1" />

        </io.primer.android.ui.components.TextInputWidget>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <io.primer.android.ui.components.TextInputWidget
                android:id="@+id/card_form_first_name"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/primer_input_spacing_vert"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:hint="@string/first_name"
                app:errorEnabled="true"
                app:errorIconDrawable="@null">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/card_form_first_name_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"
                    android:maxLines="1" />

            </io.primer.android.ui.components.TextInputWidget>

            <io.primer.android.ui.components.TextInputWidget
                android:id="@+id/card_form_last_name"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="@dimen/primer_input_spacing_vert"
                android:layout_weight="1"
                android:hint="@string/last_name"
                app:errorEnabled="true"
                app:errorIconDrawable="@null">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/card_form_last_name_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"
                    android:maxLines="1" />

            </io.primer.android.ui.components.TextInputWidget>

        </LinearLayout>

        <io.primer.android.ui.components.TextInputWidget
            android:id="@+id/card_form_address_line1"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/primer_input_spacing_vert"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:hint="@string/address_line_1"
            app:errorEnabled="true"
            app:errorIconDrawable="@null">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/card_form_address_line1_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences"
                android:maxLines="1" />

        </io.primer.android.ui.components.TextInputWidget>

        <io.primer.android.ui.components.TextInputWidget
            android:id="@+id/card_form_address_line2"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/primer_input_spacing_vert"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:hint="@string/address_line_2"
            app:errorEnabled="true"
            app:errorIconDrawable="@null">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/card_form_address_line2_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences"
                android:maxLines="1" />

        </io.primer.android.ui.components.TextInputWidget>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <io.primer.android.ui.components.TextInputWidget
                android:id="@+id/card_form_postal_code"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/primer_input_spacing_vert"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:hint="@string/card_zip"
                android:visibility="gone"
                app:errorEnabled="true"
                app:errorIconDrawable="@null"
                tools:visibility="visible">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/card_form_postal_code_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPostalAddress"
                    android:maxLines="1" />

            </io.primer.android.ui.components.TextInputWidget>

            <io.primer.android.ui.components.TextInputWidget
                android:id="@+id/card_form_city"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/primer_input_spacing_vert"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:hint="@string/address_city"
                app:errorEnabled="true"
                app:errorIconDrawable="@null">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/card_form_city_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPostalAddress"
                    android:maxLines="1" />

            </io.primer.android.ui.components.TextInputWidget>

        </LinearLayout>

        <io.primer.android.ui.components.TextInputWidget
            android:id="@+id/card_form_region"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/primer_input_spacing_vert"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:hint="@string/address_state"
            app:errorEnabled="true"
            app:errorIconDrawable="@null">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/card_form_region_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences"
                android:maxLines="1" />

        </io.primer.android.ui.components.TextInputWidget>

        <io.primer.android.ui.components.TextViewDanger
            android:id="@+id/card_form_error_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <io.primer.android.ui.components.ButtonPrimary
                android:id="@+id/card_form_submit_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
