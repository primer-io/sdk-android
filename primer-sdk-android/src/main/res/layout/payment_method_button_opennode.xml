<?xml version="1.0" encoding="utf-8"?>
<io.primer.android.ui.components.ButtonDefaultLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/direct_debit_preview_button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_light"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/direct_debit_button_text"
        style="@style/Primer.Text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/primer_payment_method_preview_button_height"
        android:drawablePadding="2dp"
        android:gravity="center"
        android:text="@string/pay_with"
        app:drawableEndCompat="@drawable/button_opennode_icon"
        tools:drawableEnd="@drawable/button_opennode_icon" />

</io.primer.android.ui.components.ButtonDefaultLayout>
