<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/primer_form_title_margin"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/form_title_go_back"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_go_back"
            android:contentDescription="@string/go_back_description"
            android:layout_marginEnd="@dimen/primer_form_title_margin"
            />

        <TextView
            android:id="@+id/form_title"
            style="@style/Primer.Text.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
             />

        <Button
            android:id="@+id/form_title_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/Widget.MaterialComponents.Button.TextButton"
            android:text="@string/cancel"
            android:textColor="@color/primer_app_primary"
            android:background="@android:color/transparent"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/form_progress_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="14dp"
        />

    <TextView
        android:id="@+id/form_title_description"
        style="@style/Primer.Text.SubTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/primer_form_title_margin" />

</LinearLayout>