<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/payment_method_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/go_back_description"
            android:src="@drawable/icon_go_back"
            app:layout_constraintBottom_toTopOf="@id/header_guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/header_guideline"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_begin="@dimen/primer_bottom_sheet_header_height"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title"
            style="@style/Primer.Text.NewTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp"
            android:text="@string/stripe_ach_mandate_title_label"
            app:layout_constraintBottom_toBottomOf="@+id/payment_method_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/payment_method_back"
            app:layout_constraintTop_toTopOf="@+id/payment_method_back" />

        <TextView
            android:id="@+id/subtitle"
            style="@style/Primer.Text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/xxl_vertical_margin"
            android:text="@string/stripe_ach_mandate_subtitle_label"
            android:textColor="@android:color/black"
            android:textIsSelectable="false"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title" />

        <io.primer.android.ui.components.TextInputWidget
            android:id="@+id/first_name"
            style="@style/Primer.FormInput.Outbox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large_vertical_margin"
            android:layout_marginEnd="@dimen/large_padding"
            android:hint="@string/firstNameLabel"
            app:errorEnabled="false"
            app:errorIconDrawable="@null"
            app:layout_constrainedHeight="true"
            app:layout_constraintEnd_toStartOf="@id/last_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subtitle">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/first_name_input"
                style="@style/Primer.FormInput.Outbox.Input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:inputType="textPersonName|textNoSuggestions"
                android:maxLines="1"
                android:textColor="@android:color/black" />
        </io.primer.android.ui.components.TextInputWidget>

        <io.primer.android.ui.components.TextInputWidget
            android:id="@+id/last_name"
            style="@style/Primer.FormInput.Outbox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/lastNameLabel"
            app:errorEnabled="false"
            app:errorIconDrawable="@null"
            app:layout_constrainedHeight="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/first_name"
            app:layout_constraintTop_toTopOf="@id/first_name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/last_name_input"
                style="@style/Primer.FormInput.Outbox.Input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:inputType="textPersonName|textNoSuggestions"
                android:maxLines="1"
                android:textColor="@android:color/black" />
        </io.primer.android.ui.components.TextInputWidget>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/name_input_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="first_name, last_name" />

        <io.primer.android.ui.components.TextInputWidget
            android:id="@+id/email_address"
            style="@style/Primer.FormInput.Outbox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/email_address"
            android:paddingTop="@dimen/large_vertical_margin"
            app:errorEnabled="false"
            app:errorIconDrawable="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name_input_barrier">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email_address_input"
                style="@style/Primer.FormInput.Outbox.Input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:textColor="@android:color/black" />
        </io.primer.android.ui.components.TextInputWidget>

        <Button
            android:id="@+id/submit"
            style="@style/Primer.NewButton.Primary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large_vertical_margin"
            android:text="@string/continue_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/email_address" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/input_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="payment_method_back, title, subtitle, first_name, last_name, email_address, submit" />

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progress_bar"
            android:layout_width="@dimen/primer_progress_indicator_size"
            android:layout_height="@dimen/primer_progress_indicator_size"
            android:layout_marginTop="52dp"
            android:indeterminate="true"
            app:indicatorColor="@color/button_primary_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header_guideline" />

        <TextView
            android:id="@+id/progress_text"
            style="@style/Primer.Text.NewTitle"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/large_vertical_margin"
            android:text="@string/loading_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/progress_bar"
            app:layout_constraintHeight_min="150dp"
            app:layout_constraintStart_toStartOf="@id/progress_bar"
            app:layout_constraintTop_toBottomOf="@id/progress_bar"
            app:layout_constraintVertical_bias="0" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/progress_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="progress_text,progress_bar" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
