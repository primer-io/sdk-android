<?xml version="1.0" encoding="utf-8"?>
<io.primer.android.ui.components.ButtonDefaultLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/payment_method_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_light"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center"
    android:minHeight="@dimen/primer_payment_method_preview_button_height"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/payment_method_button_text"
        style="@style/Primer.Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawablePadding="12dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textIsSelectable="false" />
</io.primer.android.ui.components.ButtonDefaultLayout>
