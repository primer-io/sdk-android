<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:animateLayoutChanges="true"
    >
    <LinearLayout
        android:id="@+id/primer_view_vaulted_payment_methods_header"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        >
        <ImageButton
            android:id="@+id/vaulted_payment_methods_go_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/go_back_description"
            android:src="@drawable/icon_go_back"
            android:backgroundTint="@android:color/transparent"
            />
        <TextView
            style="@style/Primer.Text.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/other_ways_to_pay"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/edit_vaulted_payment_methods"
            style="@style/Primer.Text.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/primer_edit_vaulted_payment_methods_header"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="16dp"
        >
        <ImageButton
            android:id="@+id/edit_vaulted_payment_methods_go_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/go_back_description"
            android:src="@drawable/icon_go_back"
            android:backgroundTint="@android:color/transparent"
            />
        <TextView
            style="@style/Primer.Text.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/edit_saved_payment_methods"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/edit_vaulted_payment_methods_done"
            style="@style/Primer.Text.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/done"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/vaulted_payment_methods_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp"
        />

    <TextView
        style="@style/Primer.Text.Button"
        android:id="@+id/vaulted_payment_methods_add_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_card"
        android:layout_marginStart="44dp"
        />
</LinearLayout>