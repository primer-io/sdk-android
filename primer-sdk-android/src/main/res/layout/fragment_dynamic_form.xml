<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/form_back_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_go_back"
        app:layout_constraintBottom_toBottomOf="@id/form_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/form_icon" />

    <ImageView
        android:id="@+id/form_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <io.primer.android.ui.components.PrimerTextViewWidget
        android:id="@+id/form_title"
        style="@style/Primer.Text.Title.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/xxl_vertical_margin"
        app:layout_constraintTop_toBottomOf="@id/form_icon" />

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/xxl_vertical_margin"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/form_description"
        app:layout_constraintTop_toBottomOf="@id/form_title" />

    <io.primer.android.ui.components.PrimerTextViewWidget
        android:id="@+id/form_description"
        style="@style/Primer.Text.ExtraSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/large_vertical_margin"
        app:layout_constraintBottom_toTopOf="@id/form_button"
        app:layout_constraintTop_toBottomOf="@id/main_layout" />

    <io.primer.android.ui.components.ButtonPrimary
        android:id="@+id/form_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>