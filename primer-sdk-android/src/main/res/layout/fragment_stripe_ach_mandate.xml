<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/Primer.Text.NewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/x_medium_vertical_margin"
            android:text="@string/stripe_ach_mandate_title_label" />

        <TextView
            android:id="@+id/mandate"
            style="@style/Primer.Text.Small.Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large_vertical_margin"
            android:textIsSelectable="false"
            tools:text="By clicking [accept], you authorise [Business Name] to debit the bank account specified above for any amount owed for charges arising from your use of [Business Name]’s services and/or purchase of products from [Business Name], pursuant to [Business Name]’s website and terms, until this authorisation is revoked. You may amend or cancel this authorisation at any time by providing notice to [Business Name] with 30 (thirty) days notice." />

        <Button
            android:id="@+id/accept"
            style="@style/Primer.NewButton.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/xl_vertical_margin"
            android:text="@string/accept_button"
            android:textFontWeight="600"
            tools:targetApi="p" />

        <Button
            android:id="@+id/decline"
            style="@style/Primer.Button.Text.Secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/xl_vertical_margin"
            android:text="@string/cancel_payment_button" />
    </LinearLayout>
</ScrollView>
