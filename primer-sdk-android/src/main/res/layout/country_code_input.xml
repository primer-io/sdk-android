<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <io.primer.android.ui.components.TextInputWidget
        android:id="@+id/card_form_country_code"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/primer_input_spacing_vert"
        android:layout_weight="1"
        android:hint="@string/countryLabel"
        app:endIconDrawable="@drawable/ic_input_drop_down"
        app:endIconMode="dropdown_menu"
        app:endIconTint="@android:color/black"
        app:errorEnabled="false"
        app:errorIconDrawable="@null"
        app:hintTextAppearance="@style/TextAppearance.AppCompat.Caption"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/card_form_country_code_input"
            style="@style/Primer.FormInput.Outbox.Input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:maxLines="1"
            tools:ignore="TouchTargetSizeCheck,TextContrastCheck"
            tools:text="@string/countryLabel"
            tools:textColor="@android:color/black" />

    </io.primer.android.ui.components.TextInputWidget>

</androidx.constraintlayout.widget.ConstraintLayout>
