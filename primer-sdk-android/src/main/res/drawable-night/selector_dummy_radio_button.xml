<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="@color/primer_dummy_apm_checked_border" />
                    <corners android:radius="4dp" />
                </shape>
            </item>
            <item android:width="22dp" android:height="22dp" android:drawable="@drawable/ic_check_blue" android:end="12dp" android:gravity="end|center_vertical" tools:ignore="UnusedAttribute" />
        </layer-list>
    </item>

    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="@color/primer_disabled" />
                    <corners android:radius="4dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>
